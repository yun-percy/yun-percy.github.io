<!DOCTYPE html>
<html>
<%-include common/head%>
<% var i=0%>
<body>
    <div class="headband"></div>
    <div class="col-lg-1"> </div>
	<div class="col-lg-3">
		<%-include common/nav%>
	</div>
    <div class="col-lg-7">
        <div class="panel article">
            <div class="panel-body">
                <div id="article">
                    <h3 class="article_info_title"><%= info.attributes.title %></h3>
                </div>
                <div class="article_info">
                        <%-include common/article_info%>
                </div>
                <div class="article_content">
                
                    <%-content%>
                </div>
                <div class="split-line"></div>
                <div class="article-footer">
                    <ul class="pager">
                        <li class="previous"><a href="#">← 上一篇</a></li>
                        <li class="next"><a href="#">下一篇 →</a></li>
                    </ul>
                </div>
                <div class="blog-tags">
                    <%for (var m in info.attributes.tags){%>
                        <a href="#"><%=info.attributes.tags[m]%></a>
                     <%}%>
                    <div class="pull-right tag-social">
                        <a href="#" class="btn btn-share pull-right">Share</a>
                        <ul class="pull-right">
                            <li>
                                <a href="#">
                                    <i class="fa fa-wechat"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-weibo"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-qq"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="article-comment">
                    <div class="panel-body">
                        <h1 class="text-center cmnt-head ">看完了,评论一个呗</h1>
                        <form role="form" class="form-horizontal leave-cmnt">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="text" class="col-lg-12 form-control" placeholder="名字|Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="text" class="col-lg-12 form-control" placeholder="Email">
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <textarea class=" form-control" rows="8" placeholder="Message"></textarea>
                                </div>
                            </div>
                            <p>
                                <button class="btn btn-post-cmnt pull-right" >评论 | Comment</button>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%-include common/search%>
	</div>
    <%-include common/footer%>
<%-include common/js%>
<%-include common/code_highlight%>
<script type="text/javascript">
    $('.btn.btn-post-cmnt').click(function(){
        if (1) {
            return false;
        };
    })
</script>
</body>
</html>
